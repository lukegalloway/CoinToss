                var testObject = eval();
                var useIt = @useGrid;
                if( useIt ){

                    var d = $('<div>')

                    d.html('@queryResult');
                    var string2 = "[" + d.text() + "]";
                    var dataObject = eval(string2);

                    var columns = [];
                    $('#results').DataTable({
                        "data": dataObject[0].DATA,
